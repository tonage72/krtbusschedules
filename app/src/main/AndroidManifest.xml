<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fleming.david.com.krtbusschedules">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fleming.david.com.krtbusschedules.KRTActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fleming.david.com.krtbusschedules.RouteSelectActivity"
            android:noHistory="true"
            android:label="@string/title_activity_route_select" >
        </activity>
        <activity
            android:name="fleming.david.com.krtbusschedules.DaySelectActivity"
            android:noHistory="true"
            android:label="@string/title_activity_day_select" >
        </activity>
        <activity
            android:name="fleming.david.com.krtbusschedules.DirectionSelectActivity"
            android:noHistory="true"
            android:label="@string/title_activity_direction_select" >
        </activity>
        <activity
            android:name="fleming.david.com.krtbusschedules.TimepointSelectActivity"
            android:noHistory="true"
            android:label="@string/title_activity_timepoint_select" >
        </activity>
        <activity
            android:name="fleming.david.com.krtbusschedules.ListEntireTripActivity"
            android:noHistory="true"
            android:label="ListEntireTripActivity">
        </activity>
    </application>
</manifest>